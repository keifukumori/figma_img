FIGMA_API_TOKEN=your_figma_token_here

# Offline input (PC only)
INPUT_JSON_FILE=figma_layout/raw_figma_data/latest_pc.json
FRAME_NODE_ID=1:2
OFFLINE_MODE=true
IMAGE_SOURCE=local
USE_IMAGES=true

# Device mode: pc | sp | both
DEVICE_MODE=pc

# Output options
OUTPUT_DIR=figma_layout
PC_SUFFIX=-pc
SP_SUFFIX=-sp
SINGLE_HTML=true
SINGLE_HTML_ONLY=true
# Optional: generate single DOM (PC DOM only; SP CSS under media query)
# SINGLE_DOM=false

# Optional exclusions
EXCLUDE_HEADER_FOOTER=true
EXCLUDE_LAYER_NAMES=footer,フッター,header,ヘッダー,nav,breadcrumb,include,inc,partial,shared

# Style scope and safety
NODE_STYLE_SCOPE=conservative
SUPPRESS_CONTAINER_WIDTH=true
SUPPRESS_FIXED_HEIGHT=true
USE_ASPECT_RATIO=true
SECTION_WRAPPER_MODE=compact

# Alias mapping (safe defaults)
N_CLASS_ALIAS_MODE=add
N_CLASS_ALIAS_SOURCE=semantic
N_CLASS_ALIAS_NAMESPACE=section
N_CLASS_ALIAS_STYLE=bem
N_CLASS_ALIAS_DEDUP=section_index
N_CLASS_ALIAS_UNIQUE_ONLY=true
N_CLASS_ALIAS_DROP_N_UNIQUE=true
